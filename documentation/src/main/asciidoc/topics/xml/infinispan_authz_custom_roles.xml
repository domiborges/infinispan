<infinispan>
  <cache-container name="custom-authorization">
    <security>
      <authorization>
        <!-- Specify user roles and corresponding permissions. -->
        <role name="admin" permissions="ALL" />
        <role name="myroleone" permissions="ALL_WRITE,LISTEN" />
        <role name="myroletwo" permissions="READ,WRITE"/>
      </authorization>
    </security>
  </cache-container>
</infinispan>
